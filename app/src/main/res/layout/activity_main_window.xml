<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainWindow"
    android:background="@drawable/bg8_3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/timePicker"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#b0bec5"
        android:background="#b0bec5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From          :"
        android:id="@+id/textView"
        android:textSize="15dp"
        android:layout_marginTop="91dp"
        android:layout_alignParentTop="true"
        android:textColor="#ffffffff"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To               :"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/spinner_from"
        android:textColor="#ffffffff"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_from"
        android:spinnerMode="dropdown"
        android:textColor="#ffffffff"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/textView"
        android:entries="@array/busStopNames" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_to"
        android:spinnerMode="dropdown"
        android:textColor="#ffffffff"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/spinner_from"
        android:layout_alignEnd="@+id/spinner_from" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time           :"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:textColor="#ffffffff"
        android:autoText="false"
        android:layout_below="@+id/spinner_to"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:timePickerMode="spinner"
        android:scaleX="0.8"
        android:scaleY="0.8"
        style="@style/MyTimePicker"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

</RelativeLayout>
